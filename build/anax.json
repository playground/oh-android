{
  "Edge": {
    "APIListen": "127.0.0.1:8510",
    "DBPath": "/var/horizon/",
    "GethURL": "http://127.0.0.1:8545",
    "DockerEndpoint": "unix:///var/run/docker.sock",
    "StaticWebContent": "/usr/horizon/web/",
    "PublicKeyPath": "/etc/horizon/trust/mtn-publicKey.pem",
    "TrustSystemCACerts": true,
    "CACertsPath": "",
    "DefaultCPUSet": "",
    "ServiceStorage": "",
    "ExchangeURL": "",
    "PolicyPath": "/etc/horizon/policy.d/",
    "ExchangeHeartbeat": 60,
    "ExchangeVersionCheckIntervalM": 720,
    "ExchangeMessageTTL": 1800,
    "AgreementTimeoutS": 600,
    "ReportDeviceStatus": true,
    "TrustCertUpdatesFromOrg": true,
    "TrustDockerAuthFromOrg": true,
    "ServiceUpgradeCheckIntervalS": 300,
    "MultipleAnaxInstances": false,
    "FileSyncService": {
        "CSSURL": "${HZN_FSS_CSSURL}",
        "AuthenticationPath": "/data/var/tmp/horizon/${CONTAINER_NAME}/ess-auth",
        "APIListen": "/data/var/tmp/horizon/${CONTAINER_NAME}/fss-domain-socket/essapi.sock",
        "PersistencePath": "/data/var/tmp/horizon/${CONTAINER_NAME}/ess-store"
    },
    "SecretsManagerFilePath": "/data/var/tmp/horizon/${CONTAINER_NAME}/secrets",
    "NodeMgmtWorkDirectory": "/data/var/tmp/horizon/${CONTAINER_NAME}/nmp"
  },
  "ArchSynonyms": {
    "x86_64": "amd64",
    "armhf": "arm",
    "aarch64": "arm64"
  }
}
